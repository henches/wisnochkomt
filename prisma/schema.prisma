// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expression {
  id        Int      @id @default(autoincrement())
  text      String   
  author    String   
  info      String
  createdAt DateTime @default(now())
}

model User {
  id          Int      @id @default(autoincrement())
  userName    String
  hashPassord String
  role        String
  createdAt   DateTime @default(now())
}
